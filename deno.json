{
  "tasks": {
    "dev": "deno run --watch --allow-import -ERN src/main.ts"
  },
  "imports": {
    "grammy": "https://deno.land/x/grammy@v1.35.0/mod.ts"
  },
  "lint": {
    "include": [
      "src/"
    ],
    "rules": {
      "tags": [
        "recommended"
      ],
      "include": [
        "ban-untagged-todo"
      ],
      "exclude": [
        "no-unused-vars"
      ]
    }
  },
  "fmt": {
    "useTabs": true,
    "lineWidth": 120,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve",
    "include": [
      "src/"
    ]
  }
}
